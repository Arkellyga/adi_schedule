<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/layout_widget"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorBackgroundAlpha">
    <ImageView
        android:layout_marginTop="10dp"
        android:contentDescription="@string/week"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_week"/>

    <TextView
        android:layout_marginTop="20dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:id="@+id/text_view_current_week_widget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ListView
        android:theme="@style/ArrayStyle"
        android:layout_centerInParent="true"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:id="@+id/list_view_lessons_widget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/text_view_current_day_widget"
        android:layout_marginBottom="20dp"
        android:layout_centerInParent="true"
        android:layout_above="@id/list_view_lessons_widget"
        android:hint="@string/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>